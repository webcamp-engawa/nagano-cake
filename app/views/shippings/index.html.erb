<%= form_for @shipping do |f| %>

<div class ="container">
	<div class = row>
		<div class ="col-md-6 ">

			<h3 class = "mb-3 mt-5">配送先登録/一覧</h3>

 			<%= flash[:notice_create] %>
 			<%= flash[:notice_fix] %>
 			<%= flash[:notice_destroy] %>

			<table class="shipping-create">

				<tr>
					<th>郵便番号</th>		<td><%=f.text_field :postcode,class:"form-control mb-2" %></td>
				</tr>
				<tr>
					<th>住所</th>	<td><%=f.text_field :address,class:"form-control mb-2" %></td>
				</tr>
				<tr>
					<th>宛名</th>	<td><%=f.text_field :address_name,class:"form-control mb-2" %></td>
				</tr>

			</table>
		</div>
	</div>

<div class ="col-md-6">

<%= f.submit "登録する",class:"btn btn-outline-primary mb-4" %>

<% end %>
</div>


<table class="shipping-index">

	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
	</tr>
	<% @shippings.each do |shipping| %>
	<tr>
		<td><%= shipping.postcode %></td>
		<td><%= shipping.address %></td>
		<td><%= shipping.address_name %></td>
		<td><%= link_to "編集する", edit_shipping_path(shipping.id), class:"btn btn-outline-primary mb-4" %> <%= link_to "削除する", shipping_path(shipping.id), method: :delete, class:"btn btn-outline-danger mb-4" %></td>
	</tr>
<% end %>
</table>

</div>


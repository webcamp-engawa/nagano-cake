<h3>配送先登録/一覧</h3>

 <%= flash[:notice] %>

<table class="shipping-create">
<%= form_for @shipping do |f| %>
	<tr>
		<th>郵便番号</th> <td><%=f.text_field :postcode %></td>
	</tr>
	<tr>
		<th>住所</th> <td><%=f.text_field :address %></td>
	</tr>
	<tr>
		<th>宛名</th> <td><%=f.text_field :address_name %></td>
		<td> <%= f.submit "登録する" %>
	</tr>
<% end %>
</table>

<table class="shipping-index">
<% @shippings.each do |shipping| %>
	<tr>
		<th>郵便番号</th>
		<th>住所</th>
		<th>宛名</th>
	</tr>
	<tr>
		<td><%= shipping.postcode %></td>
		<td><%= shipping.address %></td>
		<td><%= shipping.address_name %></td>
		<td><%= link_to "編集する", edit_shipping_path(shipping.id) %> <%= link_to "削除する", shipping_path(shipping.id), method: :delete %></td>
	</tr>
<% end %>
</table>
<%= form_for(@shipping) do |f|%>
<div class ="container">
	<div class="mx-auto" style="width: 500px;">
<h3>配送先編集</h3>

<table class="edit-shippings">
	<tr>
		<th>郵便番号</th> <td><%=f.text_field :postcode,class:"form-control" %></td>
	</tr>
	<tr>
		<th>住所</th> <td><%= f.text_field :address,class:"form-control" %></td>
	</tr>
	<tr>
		<th>宛名</th> <td><%= f.text_field :address_name,class:"form-control" %></td>
	</tr>
</table>
<br>
<%= f.submit "編集する",class:"btn btn-outline-primary" %>
<% end %>
</div>
</div>

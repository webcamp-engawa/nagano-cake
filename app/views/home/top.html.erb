<div class="row">
  <%= render 'layouts/genre_serch' %>

  <div class="col-10">
    <h1>商品一覧</h1>
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
      <p>商品の画像</p>
      <%= attachment_image_tag item, :image, :fill, 200, 120, format: "jpg" %>
      <%= item.name %>
      <%= number_to_currency((BigDecimal(item.price) * BigDecimal("1.08")).ceil) %>
      <% end %>
    <% end %>
  </div>
</div>
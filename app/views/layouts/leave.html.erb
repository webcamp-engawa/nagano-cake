      <!-- ロゴ修正中 -->


          <div class ="jumbotron jumbotron-fluid">

            <div class="title-cover">
                      <ul class="list-inline-item">
                        <% if customer_signed_in? %>
                          <li class ="list-inline-item">
                            <%= link_to root_path do %>
                              <i class="fas fa-home fa-3x"></i>
                              <p>Top</p>
                            <% end %>
                            </li>
                          <li class ="list-inline-item">
                            <%= link_to home_about_path do %>
                            <i class="fas fa-store fa-3x"></i>
                            <p>About</p>
                            <% end %>
                          </li>
                          <li class ="list-inline-item">
                            <%= link_to cart_items_path do %>
                              <i class="fas fa-shopping-cart fa-3x"></i>
                              <p>Cart</p>
                            <% end %>
                          </li>
                          <li class ="list-inline-item">
                            <%= link_to destroy_customer_session_path, method: :delete do %>
                              <i class="fas fa-door-open fa-3x"></i>
                              <p>Logout</p>
                              <% end %>
                            </li>
                            <div class="welcome">
                          <li class ="list-inline-item">ようこそ<%= link_to current_customer.fullname.to_s, customer_path %>さん</li>
                            </div>
                          <% elsif admin_signed_in? %>
                          <li class ="list-inline-item"><%= link_to "商品一覧",admin_items_path %></li>
                          <li class ="list-inline-item"><%= link_to "会員一覧",admin_customers_path %></li>
                          <li class ="list-inline-item"><%= link_to "注文履歴一覧",admin_orders_path(button:1) %></li>
                          <li class ="list-inline-item"><%= link_to "ジャンル管理",admin_genres_path %></li>
                          <li class ="list-inline-item"><%= link_to "ログアウト" ,destroy_admin_session_path, method: :delete %></li>

                        <% else %>
                          <li class ="list-inline-item"><%= link_to "Top", root_path %></li>
                          <li class ="list-inline-item"><%= link_to "About", home_about_path %></li>
                          <li class ="list-inline-item"><%= link_to "Log in", new_customer_session_path %></li>
                          <li class ="list-inline-item"><%= link_to "管理者はこちら" ,new_admin_session_path %></li>

                        <% end %>
                      </ul>


                  <% if customer_signed_in? %>
                        <dl class ="searchbox">
                              <%= search_form_for @search, url: items_path do |f| %>
                              <div class ="searching">
                                <dt><%= f.search_field :name_cont ,placeholder: "キーワード検索", id: :item_name %><%= f.submit ("search") , class: 'search-btn' %></dt>
                              </div>
                              <% end %>
                        </dl>

                  <% elsif admin_signed_in? %>
                    <h2><%= link_to "ながのCAKE", admin_root_path, id: "logo" %></h2>
                  <% else %>
                        <dl class ="searchbox">
                            <%= search_form_for @search, url: items_path do |f| %>
                            <div class ="searching">
                              <dt><%= f.search_field :name_cont ,placeholder: "キーワード検索", id: :item_name %><%= f.submit ("search") , class: 'search-btn' %></dt>
                            </div>
                            <% end %>
                        </dl>
                        <h2><%= link_to "ながのCAKE", root_path, id: "logo" %></h2>
                  <% end %>
            <!-- </div> -->
            </div>
          </div>
    </header>

<div class="alert-container">

  <div class="alert">
    <div><i class="fas fa-exclamation-triangle faa-flash animated fa-5x"></i></div>
    <h1>　退会手続きを実行します。</h1>
  </div>

  <p class="alert-m">
    退会すると、<br>
    <strong class="strong">会員登録情報や、</strong>
    <strong class="strong">購入履歴が</strong><strong id="red">閲覧できなくなります。</strong><br>
    退会する場合は、「退会する」をクリックしてください。
  </p>

    <div>
      <%= link_to customer_registration_path, method: :delete, data: { confirm: '本当に退会しますか？' }, class: "label label-danger" do %>
        <div class="btn btn-danger faa-horizontal animated-hover">
          <i class="fas fa-sign-out-alt" style="color: white;"> 退会する</i>
        </div>
      <% end %>
    </div>
    <div id="btn2">
      <%= link_to customer_path do %>
        <div class="btn btn-dark faa-horizontal animated-hover">
          <i class="fas fa-sign-in-alt" style="color: white;"> 退会しない</i>
        </div>
      <% end %>
    </div>
</div>

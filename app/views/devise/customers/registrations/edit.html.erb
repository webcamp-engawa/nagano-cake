<h2>パスワード変更</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.hidden_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :"新しいパスワードを入力してください" %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> 文字以上で入力してください</em>
    <% end %>
  </div>

<br>

  <div class="field">
    <font color="red">
    <%= f.label :"※もう一度入力してください" %>
    </font><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

<br>

  <div class="field">
    <%= f.label :"現在のパスワードを入力してください" %><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

<br>

  <div class="actions">
    <%= f.submit "パスワードを変更する", class:"btn btn-outline-primary mb-4" %>
  </div>
<% end %>

<%= link_to "登録情報編集に戻る", :back, class:"btn btn-outline-danger mb-4" %>

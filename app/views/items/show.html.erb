<h1>items#show</h1>

<div>
  <h2>ジャンル検索</h2>
  <% @genres.each do |genre| %>
    <div><%= link_to "#{genre.name}", controller: "items", action: "index", genre_id: genre.id %></div>
  <% end %>
</div>




<p>商品の画像</p>
<%= attachment_image_tag @item, :image, :fill, 200, 120, format: "jpg" %>
<%= @item.name %>
<%= @item.introduction %>
<%= @item.price %>

<%= form_for @cart_item do |f| %>
  <%= render 'layouts/errors_messages', model: f.object %>
  <%= f.select :quantity, options_for_select((1..20).to_a), include_blank: "個数選択" %>
  <%= f.submit "カートに入れる" %>
<% end %>
<h1>注文情報</h1>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>注文日</th>
      <td><%= l @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
        <td><%= @order.fulladdress %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment %></td>
    </tr>
    <tr>
      <th>ステータス</th>
      <td><%= @order.order_status %></td>
    </tr>
  </thead>
</table>

<h1>請求情報</h1>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>商品合計</th>
      <td><%= number_to_currency((@order.total_price - @order.postage).ceil) %></td>
    </tr>
    <tr>
      <th>配送料</th>
        <td><%= number_to_currency(@order.postage.ceil) %></td>
    </tr>
    <tr>
      <th>ご請求額</th>
      <td><%= number_to_currency(@order.total_price.ceil) %></td>
    </tr>
  </thead>
</table>

<h1>注文内容</h1>
  <table class="table table-bordered mx-auto">
    <thead class="thead-light">
      <tr>
        <th scope="col">商品</th>
        <th scope="col">単価</th>
        <th scope="col">個数</th>
        <th scope="col">小計</th>
      </tr>
    </thead>
      <% @order_items.each do |o| %>
      <tbody>
        <tr>
          <td scope="row"><%= o.item.name %></td>
          <td scope="row"><%= number_to_currency(o.order_price.ceil) %></td>
          <td scope="row"><%= o.quantity %></td>
          <td scope="row"><%= number_to_currency((o.order_price * o.quantity).ceil) %></td>
        </tr>
      </tbody>
      <% end %>
  </table>
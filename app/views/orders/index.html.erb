<h1>注文履歴一覧</h1>

<div class="row">
  <table class="table table-bordered mx-auto">
    <thead class="thead-light">
      <tr>
        <th scope="col">注文日</th>
        <th scope="col">配送先</th>
        <th scope="col">注文商品</th>
        <th scope="col">支払金額</th>
        <th scope="col">ステータス</th>
        <th scope="col">注文詳細</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td scope="row"><%= l order.created_at %></td>
          <td scope="row"><%= order.fulladdress.to_s %></td>
          <td scope="row">
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %>
            <% end %>
          </td>
          <td scope="row"><%= number_to_currency((order.total_price).ceil) %></td>
          <td scope="row"><%= order.order_status %></td>
          <td scope="row"><%= link_to '表示する', order_path(order.id), class: "btn btn-primary" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
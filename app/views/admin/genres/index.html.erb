<div class = "genre-index-create">
	<h1>ジャンル追加・一覧</h1>



	<table id = "genres-index">
		<thead>
			<tr>
				<th>ジャンル</th>		<th>状態</th>	<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td>
				<%= genre.name %>
				</td>
				<td>
				<% if genre.is_active? %>
					<p>有効</p>
				<% else %>
					<p>無効</p>
				<% end%>
				</td>
				<td>
					<%= link_to "編集する",edit_admin_genre_path(genre.id) %>
				</td>
			</tr>
			<% end %>
		</tbody>

	</table>

</div>
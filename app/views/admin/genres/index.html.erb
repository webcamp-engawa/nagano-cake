<div class = "container" >
<div class = "genre-index-create">
	<h1>ジャンル追加・一覧</h1>
	<%= flash[:notice] %>
	<%= flash[:notice_update] %>
					<% if @genre.errors.any? %>
                        <h2><%= @genre.errors.count %>件のエラーがあります</h2>
                            <ul>
                                <% @genre.errors.full_messages.each do |message| %>
                                    <li><%= message %></li>
                                <% end %>
                            </ul>
                    <% end %>

	<%= form_for(@genre,url: {controler: "genres", action: "create" }) do |f| %>
     	<%= f.text_field :name %><%= f.radio_button :is_active, :true %>有効<%= f.radio_button :is_active, :true %>無効<%= f.submit "追加", class:"btn-info" %>
     <% end %>

	<table class = "table">
		<thead>
			<tr>
				<th>ジャンル</th>		<th>状態</th>	<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td>
				<%= genre.name %>
				</td>
				<td>
				<% if genre.is_active? %>
					<p>有効</p>
				<% else %>
					<p>無効</p>
				<% end%>
				</td>
				<td>
					<%= link_to "編集する",edit_admin_genre_path(genre.id) %>
				</td>
			</tr>
			<% end %>
		</tbody>

	</table>

</div>
</div>
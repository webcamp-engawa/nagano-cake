<div class ="container" >
<div class ="genre-edit">
	<h1>ジャンル編集画面</h1>

			<% if @genre.errors.any? %>
                <h2><%= @genre.errors.count %> 件のエラーがあります</h2>
                     <ul>
                        <% @genre.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
            <% end %>


     <%= form_for(@genre,url: {controler: "genres", action: "update" }) do |f| %>
     <div class="row">
     	<div class="col-3 mb-4 mt-4">
            <%= f.text_field :name,class:"form-control" %>
        </div>
    </div>
     	<%= f.radio_button :is_active, :true %> 有効 <%= f.radio_button :is_active, :false %> 無効 <%= f.submit "変更を保存する", class:"btn btn-outline-primary"%>
     <% end %>
</div>
</div>
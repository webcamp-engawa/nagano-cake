<div class ="container" >
<div class ="genre-edit">
	<h1>ジャンル編集画面</h1>

			<% if @genre.errors.any? %>
                <h2><%= @genre.errors.count %> 件のエラーがあります</h2>
                     <ul>
                        <% @genre.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                    </ul>
            <% end %>


     <%= form_for(@genre,url: {controler: "genres", action: "update" }) do |f| %>
     	<%= f.text_field :name %>
     	<%= f.radio_button :is_active, :true %>有効<%= f.radio_button :is_active, :true %>無効
        <%= f.submit "変更を保存する", class:"btn-info"%>
     <% end %>
</div>
</div>
<div class="container">
	<div class="row">
		<h1>注文一覧画面</h1>
		<% @orders.each do |order| %>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
				<tbody>
					<tr>
						<td>
							<%= order.created_at %>
						</td>
						<td>
							<%= order.customer.last_name %><%= order.customer.first_name %>
						</td>
						<td>
							<%= order.order_items.sum(:quantity) %>
						</td>
						<td>
							<%= order.order_status %>
						</td>
					</tr>
				</tbody>
			</thead>
		</table>
		<% end %>
	</div>
</div>

<div class="container">
	<div class="row">
		<h1>注文詳細画面</h1>
		<%= form_for(@order, url: {controller: "orders", action: "update"}) do |f| %>
		<% @orders.each do |order| %>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>購入者</td>
					<td>
						<%= link_to admin_customer_path(@customer) do %>
							<%= @order.customer.last_name %><%= @order.customer.first_name %>
						<% end %>
					</td>
				</tr>
				<tr>
					<td>配送先</td>
					<td><%= @order.postcode %> <%= @order.address %><br><%= @order.address_name %></td>
				</tr>
				<tr>
					<td>支払い方法</td>
					<td><%= @order.payment %></td>
				</tr>
				<tr>
					<td>注文ステータス</td>
					<td>
						<%= f.select :order_status, [["入金待ち","1"],["入金確認","2"],["制作中","3"],["発送準備中","4"],["発送済み","5"]] %>
					</td>
				</tr>
			</tbody>
		</table>
		<% end %>
		<div class="item_info">
		<% @order_items.each do |order_item| %>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>
					<th>製作ステータス</th>
				</tr>
				<tbody>
					<tr>
						<td>
							<%= order_item.item.name %>
						</td>
						<td>
							<%= @price %>
						</td>
						<td>
							<%= order_item.quantity %>
						</td>
						<td>
							<%= @subtotal %>
						</td>
						<td><%= f.fields_for :order_items do |f| %>
								<%= f.select :cooking_status, [["着手不可","1"],["製作待ち","2"],["制作中","3"],["製作完了","4"]] %>
							<% end %>
						</td>
					</tr>
				</tbody>
			</thead>
		</table>
		<% end %>
		</div>
		<% @orders.each do |order| %>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>商品合計</td>
					<td>
						<%= @sum %>  円
					</td>
				</tr>
				<tr>
					<td>送料</td>
					<td>
						<%= order.postage %>　円
					</td>
				</tr>
				<tr>
					<td>請求金額合計</td>
					<td>
						<%= order.total_price %>  円
					</td>
				</tr>
			</tbody>
		</table>
		<% end %>
			<%= f.submit "まとめて更新" %>
		<% end %>
	</div>
</div>
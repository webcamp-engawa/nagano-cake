<div class="container">
	<h1>商品 新規登録画面</h1>
	<div class="row">
		<% if @item.errors.any? %>
        	<div id="error_explanation">
          		<h2><%= pluralize(@item.errors.count, "error") %> prohibited this user from being saved:</h2>
          		<ul>
          			<% @item.errors.full_messages.each do |msg| %>
            		<li><%= msg %></li>
          			<% end %>
          		</ul>
        	</div>
    	<% end %>
    	<div class="col-lg-8 pt-5">
		<%= form_for(@item, url: {controller: "items", action: "create"}) do |f| %>
			<div class="field">
				<label class="image">
				<%= f.attachment_field :image %>
				</label>
			</div>
			<div class="field">
				<label class="name">商品名</label>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<label class="introduction">商品説明</label>
				<%= f.text_area :introduction %>
			</div>
			<div class="field">
				<label class="genre">ジャンル</label>
				<%= f.collection_select :genre_id, @genres, :id, :name,{} %>
			</div>
			<div class="field">
				<label class="price">税抜き価格</label>
				<%= f.number_field :price %>
			</div>
			<div class="field">
				<label class="is_sold">販売ステータス</label>
				<%= f.select :is_sold, [["売り切れ","true"],["販売中","false"]], :prompt=>"選択してください" %>
			</div>
			<div class="submit">
				<%= f.submit "新規登録" %>
			</div>
		<% end %>
		</div>
	</div>
</div>
<div class="body">
	<div class="container">
		<div class="row">
			<h1>商品一覧画面</h1>
			<% @items.each do |item| %>
			<table>
				<thead>
					<tr>
						<th>商品id</th>
						<th>商品名</th>
						<th>税抜き価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
					<tbody>
						<tr>
							<td>
								<%= item.id %>
							</td>
							<td>
								<%= item.name %>
							</td>
							<td>
								<%= item.price %>
							</td>
							<td>
								<%= item.genre_id %>
							</td>
							<td>
								<%= item.is_sold %>
							</td>
						</tr>
					</tbody>
				</thead>
			</table>
			<% end %>
		</div>
	</div>
</div>

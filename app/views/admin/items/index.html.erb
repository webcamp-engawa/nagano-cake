<div class="container">
	<div class="row">
		<h1>商品一覧画面</h1>
			<table class="table">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				<tbody>
					<% @items.each do |item| %>
						<tr>
						<td>
							<%= item.id %>
							</td>
						<td>
							<%= link_to admin_item_path(item.id) do %>
							<%= item.name %>
						</td>
					<% end %>
						<td>
							<%= item.price %>
						</td>
						<td>
							<%= item.genre.name %>
						</td>
						<td>
							<% if item.is_sold? %>
								<p>販売中</p>
							<% else %>
								<p>販売停止中</p>
							<% end %>
						</td>
						</tr>
					<% end %>
				</tbody>
			</thead>
		</table>
	</div>
</div>

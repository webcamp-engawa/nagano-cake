<div class="container">
	<div class="row">
		<h1>商品一覧画面</h1> <%= link_to "商品登録", new_admin_item_path %>
			<table class="table">
				<thead>
					<tr>
						<th>商品ID</th>
						<th>商品名</th>
						<th>税抜価格</th>
						<th>ジャンル</th>
						<th>ステータス</th>
					</tr>
				<tbody>
					<% @items.each do |item| %>
						<tr>
						<td>
							<%= item.id %>
							</td>
						<td>
							<%= link_to admin_item_path(item.id) do %>
							<%= item.name %>
						</td>
					<% end %>
						<td>
							<%= number_to_currency((BigDecimal(item.price)).ceil) %>
						</td>
						<td>
							<%= item.genre.name %>
						</td>
						<td>
							<% if item.is_sold? %>
								<p>販売中</p>
							<% else %>
								<p>売り切れ</p>
							<% end %>
						</td>
						</tr>
					<% end %>
				</tbody>
			</thead>
		</table>

			<%= paginate @items, class: "paginate" %>

	</div>
</div>

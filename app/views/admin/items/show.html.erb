<div class="container">
	<div class="row">
		<h1>商品詳細画面</h1>
		<div class="image">
		<%= attachment_image_tag @item, :image, :size=> "300x250" %>
		<div class="item_introduce">
			<p class="name">
				商品名
				<%= @item.name %>
			</p>
			<p class="introduction">
				商品説明
				<%= @item.introduction %>
			</p>
			<p class="genre">
				ジャンル
				<%= @item.genre.name %>
			</p>
			<p class="price">
				税抜き価格（税込価格)
				<%= number_to_currency((BigDecimal(@item.price)).ceil)%> (<%=number_to_currency((BigDecimal(@item.price)*BigDecimal("1.08")).ceil)%>)
			</p>
			<p class ="is_sold">
				販売ステータス
				<% if @item.is_sold %>
				<p>売り切れ</p>
				<% else %>
				<p>販売中</p>
				<% end %>
			</p>
			<p>
				<%= link_to '編集する', edit_admin_item_path(@item) %>
			</p>
		</div>
	</div>
</div>

<div class = "container">
<div class = customers-show>
	<h1>会員詳細画面</h1>
	<%= flash[:notice] %>
		<table class = "table table-borderless">
			<tr>
				<th style="width:20%">顧客ID</th>
				<td><%= @customer.id %>
					<% if @customer.is_deleted? %>
					退会済<
					<% else %>
					有効会員
					<% end %>
				</td>
			</tr>
			<tr>
				<th>氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td>
			</tr>
			<tr>
				<th>フリガナ</th>	<td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
			</tr>
			<tr>
				<th>郵便番号</th>	<td><%= @customer.postcode %></td>
			</tr>
			<tr>
				<th>住所</th><td><%= @customer.address %></td>
			</tr>
			<tr>
				<th>電話番号</th>	<td><%= @customer.phone_number %></td>
			</tr>
			<tr>
				<th>メールアドレス</th><td><%= @customer.email %></td>
			</tr>
		</table>

<%= link_to "編集" , edit_admin_customer_path(@customer.id) %>

</div>
</div>
<div class ="container">
  <div class="mx-auto" style="width: 500px;">
<h2 class="text-center">マイページ</h2>

<%= flash[:notice_update] %>
<br>
<h3 class="text-center">登録情報</h3>

<div class="form-group row justify-content-center">
	<div>
		<%= link_to "編集する", edit_customer_path, class:"btn btn-outline-primary mb-2" %>
		<%= link_to "パスワードを変更する", edit_customer_registration_path, class:"btn btn-outline-primary mb-2" %>
	</div>
</div>


		<table class="table">
			<tr>
